<%- include("header.ejs") -%>

    <div class="box" id="heading">
      <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">

      <%  newItems.forEach(function(newItem){  %>
        <form action="/delete", method="POST">
          <div class="item">
            <input type="checkbox" name="deleteItem" value="<%= newItem._id %>" onchange="this.form.submit()">
            <p> <%= newItem.name %> </p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
      <%  })  %>

      <form class="item" action="/" method="post">
        <input type="text" name="addItem" placeholder="New task">
        <button type="submit" name="list" value= <%= listTitle %> >+</button>
      </form>

    </div>

<%- include("footer.ejs") -%>
